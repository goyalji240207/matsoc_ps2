#include <iostream>
#include <vector>
using namespace std;

long long MOD = 998244353;
long long C[1005][1005];

void precomputeCombinations(int n) {
    for (int i = 0; i <= n; i++) {
        C[i][0] = 1;
        for (int j = 1; j <= i; j++) {
            C[i][j] = (C[i - 1][j - 1] + C[i - 1][j]) % MOD;
        }
    }
}

int main() {
    int n;
    if (!(cin >> n)) return 0;

    vector<int> a(n + 1);
    for (int i = 1; i <= n; i++) {
        cin >> a[i];
    }

    precomputeCombinations(n);

    vector<long long> dp(n + 2, 0);
    dp[n + 1] = 1; // Base case: empty suffix

    for (int i = n; i >= 1; i--) {
        dp[i] = dp[i + 1];

        if (a[i] > 0 && a[i] <= n - i) {
            long long ways_to_form_array = C[n - i][a[i]];
            long long total_ways = (ways_to_form_array * dp[i + a[i] + 1]) % MOD;
            dp[i] = (dp[i] + total_ways) % MOD;
        }
    }
    cout << (dp[1] - 1 + MOD) % MOD << endl;

    return 0;
}
