#include <iostream>
using namespace std;

long long power(long long base, long long exp) {
    long long res = 1;
    base %= 1000000007;
    while (exp > 0) {
        if (exp % 2 == 1) res = (res * base) % 1000000007;
        base = (base * base) % 1000000007;
        exp /= 2;
    }
    return res;
}

void solve() {
    int n, m;
    if (!(cin >> n >> m)) return;

    long long total_or = 0;
    for (int i = 0; i < m; ++i) {
        int l, r;
        long long x;
        cin >> l >> r >> x;
        total_or |= x;
    }

    long long mod = 1000000007;
    long long multiplier = power(2, n - 1);
    long long ans = (total_or % mod * multiplier) % mod;

    cout << ans << endl;
}

int main() {
    int t;
    if (!(cin >> t)) return 0;
    while (t--) {
        solve();
    }
    return 0;
}
